              </view>
              <view class="weui-cell__bd">
                <input class="weui-input" name="name" auto-focus/>
              </view>
            </view>
          </view>
        </view>
      </view>
      <view class="weui-form__opr-area">
        <button class="weui-btn weui-btn_primary" form-type="submit">确定</button>
      </view>
    </form>
	</view>
</view>


