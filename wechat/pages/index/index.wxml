<form bindsubmit="login">
  <view class="weui-form__text-area">
    <view>
      <image style="width: 300rpx; height: 300rpx;" src="../../img/avatar.jpg" mode="aspectFit"></image>
    </view>
    <h2 class="weui-form__title">登录</h2>
    <view wx:if="{{errorUsername}}" class="weui-form__desc" style="color:red">用户名错误</view>
  </view>
  <view class="weui-form__control-area">
    <view class="weui-cells__group weui-cells__group_form">
      <view class="weui-cells weui-cells_form">
        <view class="weui-cell weui-cell_active">
          <view class="weui-cell__hd">
            <label class="weui-label">用户名</label>
          </view>
          <view class="weui-cell__bd">
            <input class="weui-input" name="name" />
          </view>
        </view>
      </view>
    </view>
  </view>
  <view class="weui-form__opr-area">
    <button class="weui-btn weui-btn_primary" form-type="submit">确定</button>
  </view>
</form>
